version: 2.1
jobs:
  build:
    docker:
      - image: circleci/python:3.9
    steps:
      - checkout
      - run:
          name: Install Dependencies
          command: |
            apt-get update &&
            apt-get install -y nginx
      - run:
          name: Test Nginx Configuration
          command: nginx -t
      - run:
          name: Start Nginx Server
          command: |
            nginx &&
            curl -I http://localhost

workflows:
  version: 2
  test-and-deploy:
    jobs:
      - build